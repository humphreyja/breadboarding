<div class="slide-in contain">
  <%= image_tag 'logo.svg', class: 'logo small' %>

	<%= form_for(@user, url: sign_ups_user_rights_path) do |f| %>
		<%= f.hidden_field :task, value: @task %>
		<header>
			<h1>Terms and Privacy</h1>
		</header>
		
		<div>
      <p>
        By clicking "accept", you agree to our <%= link_to 'terms of service', terms_of_service_path, target: '_blank' %>. Please take a second to 
        read them. Basically don't do bad stuff. 
      </p>
      
      <h2>The rights to <em>your</em> data</h2>
			<p>
				Your data is your data. We do not sell it, give it to anyone, or monetize from it in any way.
        Additionally we do not use any sort of 3rd party analytics.
        <br /> 
        You can read more about this in our <%= link_to 'privacy policy', privacy_policy_path, target: '_blank' %>.
			</p>
		</div>
		
		<div class="actions">
			<%= f.submit 'I accept', class: 'cta' %>
		</div>
		<%- if @task == 'sign_up' %>
			<small>3 of 3</small>
		<% end %>
	<% end %>
</div>