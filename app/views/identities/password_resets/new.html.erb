<div class="contain slide-in">
  <%= image_tag 'logo.svg', class: 'logo small' %>

	<%- if alert %>
		<h4 class="notice"><%= alert %></h4>
	<% end %>
	<h1>Forgot your password?</h1>
	<%= form_for(:reset_request, url: identities_password_reset_path) do |f| %>
		<div class="input block">
	    <%= f.label :email, 'Enter your email address' %>
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		</div>
		
		<p class="supporting">
			We&apos;ll send instructions to your email on how to reset your password.
		</p>
	
		<%= f.submit 'Send password reset email', class: 'cta' %>
	<% end %>
</div>